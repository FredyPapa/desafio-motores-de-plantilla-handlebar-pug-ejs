extends template

block contenido 
    div(class="container")
        h1 Listado de productos
        table(class="table table-striped table-hover")
            tr
                th ID
                th Producto
                th Precio
                th Imagen
            if data.length
                each dato in data
                    tr
                        td(align="center")= dato.id 
                        td= dato.title 
                        td(align="right")= dato.price
                        td(align="center")
                            - var img = dato.thumbnail
                            img(src=img,width="50px",height="50px")
            else 
                tr
                    td(align="center",colspan="4")
                        h2 No se encontraron productos
        br
        a(href="/",class="btn btn-danger",style="width: 100%;") Volver
